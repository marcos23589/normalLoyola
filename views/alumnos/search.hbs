<div class="container p-4">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div class="card">
        <div class="card-body">
          <form class="row g-3" action="/search" method="POST">
            <h3>Búsqueda de alumnos</h3>
            <div class="col-md-12">
              <div class="input-group mb-3">                
                <input type="text" class="form-control" name="apellido" id="apellido" placeholder="Buscar por apellido">                
              </div>
              <div class="input-group mb-3">                
                <input type="number" class="form-control" name="documento" id="documento"  placeholder=" Buscar por D.N.I.">
              </div>                            
              <div class="input-group mb-4">
                    <label class="input-group-text" for="curso">Curso</label>
                        <select class="form-select" type="text" id="curso" name="curso">
                            <option selected></option>
                            <option value="1A">1A</option>
                            <option value="1B">1B</option>
                            <option value="1C">1C</option>
                            <option value="2A">2A</option>
                            <option value="2B">2B</option>
                            <option value="2C">2C</option>
                            <option value="3A">3A</option>
                            <option value="3B">3B</option>
                            <option value="3C">3C</option>
                            <option value="4A">4A</option>
                            <option value="4B">4B</option>
                            <option value="4C">4C</option>
                            <option value="5A">5A</option>
                            <option value="5B">5B</option>
                            <option value="5C">5C</option>
                            <option value="TY">Proy. de aceleración</option>
                        </select>
                    <label class="input-group-text" for="año">Año</label>                    
                        <select class="form-select" type="text" id="anio" name="anio">
                            <option selected></option>                            
                            <option value="2013">2013</option>
                            <option value="2014">2014</option>
                            <option value="2015">2015</option>
                            <option value="2016">2016</option>
                            <option value="2017">2017</option>
                            <option value="2018">2018</option>
                            <option value="2019">2019</option>
                            <option value="2020">2020</option>
                            <option value="2021">2021</option>
                            <option value="2022">2022</option>
                            <option value="2023">2023</option>                            
                        </select>                    
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                 <button class="btn btn-primary ">Buscar</button>
              </div>
            </div>                
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

{{#if alumno}}
    <div class="container p-4">
    <table class="table table-hover table-sm caption-top align-middle">
        <div class="caption">
            <h3>Lista de alumnos</h3>
        </div>
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Apellido</th>
                <th scope="col">Nombre</th>
                <th scope="col">Documento</th>
                <th scope="col">Fecha de nacimiento</th>
            </tr>
        </thead>
        <tbody>
            {{#each alumno}}
            <tr>
                <th scope="row">{{idAlumnos}}</th>
                <td>{{apellido}}</td>
                <td>{{nombre}}</td>
                <td>{{documento}}</td>
                <td>{{timeago nacimiento}}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                    <a href="/view/{{idAlumnos}}" class="btn btn-primary">Ver</a>
                    {{!-- <a href="/edit/{{idAlumnos}}" class="btn btn-secondary">Editar</a>
                    <a href="/delete/{{idAlumnos}}" class="btn btn-danger">Eliminar</a> --}}
                </div>
                </td>
            </tr>            
            {{/each}}
        </tbody>
    </table>    
    {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <h4>No se encontraron alumnos.</h4>                   
                </div>
            </div>
    </div>
{{/if}}