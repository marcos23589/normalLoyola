<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form class="row g-3" action="/add" method="POST">
                        <h3>Ingreso de alumnos</h3>
                        <div class="col-md-12">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Juan"
                                autofocus required="required">
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Apellido</label>
                            <input type="text" class="form-control" name="apellido" id="apellido" placeholder="Perez"
                                required="required">
                        </div>
                        <div class="col-6">
                            <label class="form-label">Documento</label>
                            <input type="number" class="form-control" name="documento" id="documento"
                                placeholder="99.999.999" required="required">
                        </div>
                        <div class="col-6">
                            <label class="form-label">Fecha de nacimiento</label>
                            <input type="date" class="form-control" name="nacimiento" id="nacimiento"
                                required="required">
                        </div>
                        <div class="col">
                            <div class="input-group mb-4">
                                <label class="input-group-text" for="curso">Curso</label>
                                <select class="form-select" type="text" id="curso" name="curso">
                                    <option selected></option>
                                    <option value="1A">1A</option>
                                    <option value="1B">1B</option>
                                    <option value="1C">1C</option>
                                    <option value="2A">2A</option>
                                    <option value="2B">2B</option>
                                    <option value="2C">2C</option>
                                    <option value="3A">3A</option>
                                    <option value="3B">3B</option>
                                    <option value="3C">3C</option>
                                    <option value="4A">4A</option>
                                    <option value="4B">4B</option>
                                    <option value="4C">4C</option>
                                    <option value="5A">5A</option>
                                    <option value="5B">5B</option>
                                    <option value="5C">5C</option>
                                    <option value="TY">Proy. de aceleración</option>
                                </select>
                                <label class="input-group-text" for="año">Año</label>
                                <select class="form-select" type="text" id="anio" name="anio">
                                    <option selected></option>
                                    <option value="2013">2013</option>
                                    <option value="2014">2014</option>
                                    <option value="2015">2015</option>
                                    <option value="2016">2016</option>
                                    <option value="2017">2017</option>
                                    <option value="2018">2018</option>
                                    <option value="2019">2019</option>
                                    <option value="2020">2020</option>
                                    <option value="2021">2021</option>
                                    <option value="2022">2022</option>
                                    <option value="2023">2023</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group d-grid gap-2">
                            <button class="btn btn-primary ">Agregar alumno</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>